{
    "manifest_version": 3,
    "name": "AquaWave - New Tab",
    "version": "1.0.0",
    "description": "A beautiful, privacy-friendly new tab page with animated waves, customizable categories, and clean dark interface.",
    "permissions": ["storage"],
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["favicon.svg", "icons/*.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' https://www.google.com data:;"
    },
    "author": "AquaWave Team",
    "homepage_url": "https://github.com/yourusername/aquawave-theme"
}
